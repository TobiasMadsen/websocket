VERSION=1.1.0f
PKG_CPPFLAGS=-I./lib -I../windows/openssl-$(VERSION)/include
PKG_LIBS= $(WIN32FIX) -L../windows/openssl-$(VERSION)/lib${R_ARCH} -lssl -lcrypto

CXX_STD=CXX11

all: clean winlibs $(WIN32FIX)

clean:
	rm -f $(SHLIB) $(OBJECTS) $(WIN32FIX)

winlibs:
	"${R_HOME}/bin${R_ARCH_BIN}/Rscript.exe" "../tools/winlibs.R" $(VERSION)
